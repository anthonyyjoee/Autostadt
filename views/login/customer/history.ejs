<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>
<body>
<%- include('../../partials/navbar') %>

<div class="w-screen mt-24 flex justify-center items-center">
    <div class="w-3/4 rounded-lg shadow-xl p-10">
        <div class="mb-12">
            <h1 class="text-4xl font-bold flex justify-center items-center">History</h1>
        </div>
        <div class="">
            <table class="w-full">
                <tr>
                    <th>Photo</th>
                    <th>Items</th>
                    <th>Price</th>
                    <th>date</th>
                </tr>
                
                <% data.forEach(({createdAt, Item}) => { %>
                    <tr class="border-2">
                        <td class="px-20"><img src="<%=`/${Item.photo}`%>" alt="" class="w-24 h-24"></td>
                        <td class="px-20"><%= Item.name %></td>
                        <td class="px-20"><%= Item.price %> </td>
                        <td class="px-20"><%= createdAt.toLocaleDateString('id-ID') %> </td>
                    </tr>   
                <% }) %>
            </table>
        </div>
            <a href="authors/detail"><button class="font-bold w-full bg-secondary text-white px-3 py-1 rounded-sm mt-4">Show Detail</button></a>
    </div>
</div>
</body>
</html>