<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <a href="/seller/items"><button>Items</button></a>
    <a href="/seller/addItem"><button>Add Item</button></a>
    <a href="/home"><button>Home</button></a><br><br>

    <table border="1">
        <tr>
            <th>photo</th>
            <th>name</th>
            <th>price</th>
            <th>stock</th>
            <th>description</th>
            <th>category</th>
            <th>action</th>
        </tr>
        <% data.forEach(({id, name, price, stock, description, category, photo}) => { %>
         <tr>
             <td><img src="<%= `/${photo}`%>" width="100" height="100"></td>
             <td><%= name %></td>
             <td><%= Item.addDot(creatingRupiah(price)) %></td>
             <td><%= stock %></td>
             <td><%= description %></td>
             <td><%= category %></td>
             <td>
                 <a href="/seller/item/<%= id %>/edit">edit</a>
                 <a href="/seller/item/<%= id %>/delete">delete</a>
             </td>
         </tr>
        <% }) %>
    </table>
</body>
</html>