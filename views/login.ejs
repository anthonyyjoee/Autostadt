<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/landingPageNavBar') %>
    <div class="w-screen h-screen flex justify-center items-center">
        <div class="w-1/4 rounded-lg shadow-xl p-10 md:flex">
            <div class="md:p-auto my-auto">
                <h3 class="text-4xl font-bold flex justify-center items-center">Login</h3>
                <% if (errors) { %>
                    <% const realErrors = errors.replaceAll(',', '\n') %>
                    <p class="flex justify-center items-center" style="color:red; white-space: pre-line"><%= realErrors %> </p>
                <% } %>
                <form action="/login" method="post">
                    <span class="text-sm">Username</span>
                    <input type="text" name="username" class="w-full border bg-accent px-4 py-1 rounded-lg">

                    <span class="text-sm">Password</span>
                    <input type="text" name="password" class="w-full border bg-accent px-4 py-1 rounded-lg">

                    <input type="submit" value="Login" class="font-bold w-full bg-gray text-white px-3 py-1 rounded-lg mt-4">
                </form>
            </div>
        </div>
    </div>
</body>
</html>